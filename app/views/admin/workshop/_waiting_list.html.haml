- if waiting_list.list.any?
  .row
    .large-12.columns
      %strong Waiting List
      %ul.side-nav
        - waiting_list.list.each do |waiting|
          - invitation = waiting.invitation
          %li
            =link_to admin_member_path(invitation.member) do
              =invitation.member.full_name
              = l(waiting.created_at, format: :log)
- if waiting_list.reminders.any?
  .row
    .large-12.columns
      %strong Reminders
      %ul.side-nav
        - waiting_list.reminders.each do |reminder|
          - invitation = reminder.invitation
          %li
            =link_to admin_member_path(invitation.member) do
              =invitation.member.full_name
              = l(reminder.created_at, format: :log)

